{
  "name": "dinklink-server",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=prod dotenv -e .env.local -- node ./dist/index.js",
    "start_windows": "npx tsc && node --no-deprecation dist/index.js",
    "local": "NODE_ENV=local dotenv -e .env.local -- npx nodemon ./src/index.ts",
    "local_windows": "powershell -Command \"$env:NODE_ENV='local'; dotenv -e .env.local -- npx nodemon ./src/index.ts\"",
    "dev": "NODE_ENV=dev dotenv -e .env -- npx nodemon ./src/index.ts",
    "dev_windows": "powershell -Command \"$env:NODE_ENV='dev'; dotenv -e .env -- npx nodemon ./src/index.ts\"",
    "prod": "NODE_ENV=production dotenv -e .env.production -- npx nodemon ./src/index.ts",
    "prod_windows": "powershell -Command \"$env:NODE_ENV='production'; dotenv -e .env.production -- npx nodemon ./src/index.ts\"",
    "postinstall": "npm run build",
    "test": "npm run test:unit",
    "test:unit": "jest --detectOpenHandles --forceExit --config ./jest.unit.config.ts",
    "test:integration": "NODE_OPTIONS='--loader ts-node/esm' jest --config ./jest.integration.config.ts",
    "docker:test:up": "docker compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker compose -f docker-compose.test.yml down",
    "test:integration:full": "npm run docker:test:up && until docker exec $(docker ps -q -f ancestor=postgres:15) psql -U testuser -d testdb -c '\\q' 2>/dev/null; do echo 'Waiting for testuser@testdb...'; sleep 1; done && npm run test:integration && npm run docker:test:down",
    "env_push": "npx dotenv-vault@latest push local && npx dotenv-vault@latest push && npx dotenv-vault@latest push staging && npx dotenv-vault@latest push production",
    "env_pull": "npx dotenv-vault@latest pull local && npx dotenv-vault@latest pull && npx dotenv-vault@latest pull staging && npx dotenv-vault@latest pull production",
    "clear": "node -e \"const fs = require('fs'); fs.unlinkSync('log_output.log');\"",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "author": "David Cubrilla",
  "license": "ISC",
  "description": "Backend server for DinkLink, an application for Pickleball players to connect and play together.",
  "dependencies": {
    "@logtail/node": "^0.4.21",
    "@logtail/winston": "^0.4.21",
    "aws-sdk": "^2.1610.0",
    "basic-auth": "^2.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.4.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.47.3",
    "pg": "^8.11.5",
    "pg-format": "^1.0.4",
    "stripe": "^17.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@types/basic-auth": "^1.1.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.12.7",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.5",
    "@types/pg-format": "^1.0.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "babel-jest": "^29.7.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
